<!DOCTYPE html>
<html>
<head>
    <title>Attendance App|<%= title %></title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css"/>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet">
    <link href="/stylesheets/simple-sidebar.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap-select.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>

</head>
<body>
    <%- include('navbar.ejs') %>
<div id="wrapper">
    <!-- Sidebar -->
    <%- include('menu.ejs') %><!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid xyz">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Approval Pengajuan Lembur</h1>
                    <div style="height:717px; overflow: auto">
                        <% if(hasLeave === 1){ %>
                        <table id="example" class="display" cellspacing="0" style="height: 10%; overflow: auto;">
                            <thead>
                            <tr>
                                <th>Nama Pegawai</th>
                                <th>Tanggal Lembur</th>
                                <th>Type Hari Lembur</th>
                                <th>Jam Mulai Lembur</th>
                                <th>Jam Selesai Lembur</th>
                                <th>Total jam Lembur</th>
                                <th>Tujuan Lembur</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Nama Pegawai</th>
                                <th>Tanggal Lembur</th>
                                <th>Type Hari Lembur</th>
                                <th>Jam Mulai Lembur</th>
                                <th>Jam Selesai Lembur</th>
                                <th>Total jam Lembur</th>
                                <th>Tujuan Lembur</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                            </tfoot>
                            <tbody>
                            <% for(var i = 0;i < leaves.length;i++){ %>
                            <tr>
                                <td><%= employees[i].name %></td>
                                <td><%= moment(leaves[i].appliedDate).format('MMMM Do YYYY') %></td>
                                <td><%= leaves[i].tipehari %></td>
                                <td><%= leaves[i].jammulailembur %></td>
                                <td><%= leaves[i].jamselesailembur %></td>
                                <td>
                                    <% 
                                    a=parseFloat((leaves[i].jammulailembur).replace(':', '.'));
                                    b=parseFloat((leaves[i].jamselesailembur).replace(':', '.'));
                                    durasirumus=b-a;
                                    if(durasirumus < 0 ){
                                        durasirumus=durasirumus+24; 
                                    }
                                    %>    
                                        
                                        <%= durasirumus.toFixed(1) %> Jam</td>
                                <td><%= leaves[i].tujuanlembur %></td>
                                <td><%= leaves[i].adminResponse %></td>
                               
                                <td>
                                    <form method="get"
                                          action="/manager/respond-application/<%= leaves[i]._id %>/<%= employees[i]._id %>">
                                        <button type="submit"><i class="fa fa-reply fa-lg" title="Respond"
                                                                 aria-hidden="true"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                        <% }else{ %>
                        <p>Pengajuan Lembur tidak ditemukan</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->


</div>
<!-- /#wrapper -->
<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.js" charset="UTF-8"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.js" charset="UTF-8"></script>
<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="/javascripts/sidebar_menu.js"></script>
<script>

    $(document).ready(function () {


        $('#example').dataTable({
            /* No ordering applied by DataTables during initialisation */
            "order": []
        });
        for (i = new Date().getFullYear(); i > 1950; i--) {
            $('#year').append($('<option />').val(i).html(i));
        }


        // Setup - add a text input to each footer cell
        $('#example tfoot th').each(function () {
            var title = $(this).text();
            if (title != " ") {
                $(this).html('<input type="text" class="form-control" placeholder="Search ' + title + '" />');
            }
        });

        // DataTable
        var table = $('#example').DataTable();

        // Apply the search
        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                            .search(this.value)
                            .draw();
                }
            });
        });
    });
</script>
</body>

<%- include('absen.ejs') %>
</html>
