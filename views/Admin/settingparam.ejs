    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid xyz">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Setting Parameter</h1>
                    <div id="menu1" style=" height:717px ;overflow: auto;">
                        
                        <form class="form-group-sm" action="/admin/add-settingparam" method="post">
                            <% if (param.length > 0) {
                                param.forEach(function(item){ %>
                            <div class="form-group">
                                <label for="clockin">Standar Jam Clock In:</label>
                                <% if (hasErrors){ %>
                                <input type="time" class="form-control" value="<%= item.clockin %>" required="required" id="clockin" name="clockin">
                                <% }else{ %>
                                <input type="time" class="form-control" value="<%= item.clockin %>" required="required" id="clockin" name="clockin">
                                <% } %>
                            </div>
                            <div class="form-group">
                                <label for="clockout">Standar Jam Clock Out:</label>
                                <% if (hasErrors){ %>
                                <input type="time" class="form-control" value="<%= item.clockout %>" required="required" id="clockout" name="clockout">
                                <% }else{ %>
                                <input type="time" class="form-control" value="<%= item.clockout %>" required="required" id="clockout" name="clockout">
                                <% } %>
                            </div>
                            
                            <div class="form-group">
                                <label for="earlyclockin">Standar Jam Early Clock In:</label>
                                <% if (hasErrors){ %>
                                <input type="time" class="form-control" value="<%= item.earlyclockin %>" required="earlyclockin" id="name" name="earlyclockin">
                                <% }else{ %>
                                <input type="time" class="form-control" value="<%= item.earlyclockin %>" required="earlyclockin" id="earlyclockin" name="earlyclockin">
                                <% } %>
                            </div>
                            <div class="form-group">
                                <label for="earlyclockout">Standar Jam Early Clock Out:</label>
                                <% if (hasErrors){ %>
                                <input type="time" class="form-control" value="<%= item.earlyclockout %>" required="required" id="earlyclockout" name="earlyclockout">
                                <% }else{ %>
                                <input type="time" class="form-control" value="<%= item.earlyclockout %>" required="required" id="earlyclockout" name="earlyclockout">
                                <% } %>
                            </div>
                            <div class="form-group">
                                <label for="jamlembur">Standar Jam Standard Lembur:</label>
                                <% if (hasErrors){ %>
                                <input type="time" class="form-control" value="<%= item.jamlembur %>" required="required" id="jamlembur" name="jamlembur">
                                <% }else{ %>
                                <input type="time" class="form-control" value="<%= item.jamlembur %>" required="required" id="jamlembur" name="jamlembur">
                                <% } %>
                            </div>
                            
                            <% }) %>

                            <%  } else {%>
                            
                                <div class="form-group">
                                    <label for="clockin">Standar Jam Clock In:</label>
                                    <% if (hasErrors){ %>
                                    <input type="time" class="form-control" value="<%= param.clockin %>" required="required" id="clockin" name="clockin">
                                    <% }else{ %>
                                    <input type="time" class="form-control" value="<%= param.clockin %>" required="required" id="clockin" name="clockin">
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="clockout">Standar Jam Clock Out:</label>
                                    <% if (hasErrors){ %>
                                    <input type="time" class="form-control" value="<%= param.clockout %>" required="required" id="clockout" name="clockout">
                                    <% }else{ %>
                                    <input type="text" class="form-control" value="<%= param.clockout %>" required="required" id="clockout" name="clockout">
                                    <% } %>
                                </div>
                                
                                <div class="form-group">
                                    <label for="earlyclockin">Standar Jam Early Clock In:</label>
                                    <% if (hasErrors){ %>
                                    <input type="time" class="form-control" value="<%= param.earlyclockin %>" required="earlyclockin" id="name" name="earlyclockin">
                                    <% }else{ %>
                                    <input type="time" class="form-control" value="<%= param.earlyclockin %>" required="earlyclockin" id="earlyclockin" name="earlyclockin">
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="earlyclockout">Standar Jam Early Clock Out:</label>
                                    <% if (hasErrors){ %>
                                    <input type="time" class="form-control" value="<%= param.earlyclockout %>" required="required" id="earlyclockout" name="earlyclockout">
                                    <% }else{ %>
                                    <input type="time" class="form-control" value="<%= param.earlyclockout %>" required="required" id="earlyclockout" name="earlyclockout">
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="jamlembur">Standar Jam Standard Lembur:</label>
                                    <% if (hasErrors){ %>
                                    <input type="time" class="form-control" value="<%= param.jamlembur %>" required="required" id="jamlembur" name="jamlembur">
                                    <% }else{ %>
                                    <input type="time" class="form-control" value="<%= param.jamlembur %>" required="required" id="jamlembur" name="jamlembur">
                                    <% } %>
                                </div>

                            <% } %>
                            
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                           
                            <button type="submit" class="btn btn-default">Simpan</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->
<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.js" charset="UTF-8"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.js" charset="UTF-8"></script>
<script src="/javascripts/sidebar_menu.js"></script>
<script src="/javascripts/bootstrap-select.min.js"></script>
<script language="Javascript" type="text/javascript">

    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else {
                return true;
            }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123 || charCode === 32))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }

</script>
<script>

    $(document).ready(function () {
        $('.selectpicker').selectpicker();
        $('#menu3').click();
        var box1height = $('#menu1').height();
        // Set box2 height equal to box1
        $('#sidebar-wrapper').height(box1height * 1.2);
        for (i = new Date().getFullYear(); i > 1950; i--) {
            $('#year').append($('<option />').val(i).html(i));
        }

    });
</script>
</body>

<div id="myModal2" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <form method="post" action="/admin/mark-attendance">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Mark Attendance</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to mark attendance.</p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-default">Yes</button>
                </div>

            </div>
        </form>
    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form method="post" action="/admin/view-attendance">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select Month/Year</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Month">Month:</label>
                        <select class="form-control" id="month" name="month">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="year">Year:</label>
                        <select class="form-control" id="year" name="year">
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default">View</button>
                </div>
            </form>
        </div>

    </div>
</div>
</html>